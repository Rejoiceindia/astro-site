---
import { Image } from "astro:assets";
const currentPath = Astro.url.pathname;
---

<header class="w-full h-[80px] bg-primRed text-white z-80 fixed top-0 left-0">
  <nav class="flex px-5 md:px-10 items-center h-full justify-between">
    <a
      href="/"
      class="text-base md:text-3xl flex flex-col md:flex-row md:gap-2"
    >
      <span><span class="font-bold text-lg md:text-4xl">R</span>ejoice</span>
      <span><span class="font-bold text-lg md:text-4xl">E</span>state</span>
      <span><span class="font-bold text-lg md:text-4xl">C</span>onsultants</span
      >
    </a>
    <div
      id=""
      class="navLinks md:static absolute bg-primRed md:bg-transparent md:min-h-fit min-h-[20vh] left-0 top-[-410%] w-full md:w-auto flex md:items-center px-5 py-10 md:p-0 transition-all duration-500 ease-in-out z-40"
    >
      <ul
        class="flex flex-col md:flex-row items-center justify-center gap-8 md:gap-[4vw] md:text-lg w-full text-center"
      >
        <li
          class={`hover:scale-105 w-full md:w-auto ${currentPath === "/astro-site" ? "font-bold scale-105" : ""}`}
        >
          <a href="/astro-site">Home</a>
        </li>
        <li
          class={`hover:scale-105 w-full md:w-auto ${currentPath === "/astro-site/about" ? "font-bold scale-105" : ""}`}
        >
          <a href="/astro-site/about">About</a>
        </li>
        <li
          class={`hover:scale-105 w-full md:w-auto ${currentPath === "/astro-site/projects" ? "font-bold scale-105" : ""}`}
        >
          <a href="/astro-site/projects">Projects</a>
        </li>
        <li
          class={`hover:scale-105 w-full md:w-auto ${currentPath === "/astro-site/inquiry" ? "font-bold scale-105" : ""}`}
        >
          <a href="/astro-site/inquiry">Inquiry</a>
        </li>
        <li
          class={`hover:scale-105 w-full md:w-auto ${currentPath === "/astro-site/career" ? "font-bold scale-105" : ""}`}
        >
          <a href="/astro-site/career">Career</a>
        </li>
      </ul>
    </div>
    <div class="md:hidden text-2xl cursor-pointer z-50">
      <ion-icon onclick="handleToggle(this)" name="menu"></ion-icon>
    </div>
  </nav>
</header>

<script is:inline>
  function handleToggle(e) {
    e.name = e.name === "menu" ? "close" : "menu";
    const navLinks = document.querySelector(".navLinks");
    navLinks.classList.toggle("top-[102%]");
  }
</script>
