---
import { Image } from "astro:assets";
const currentPath = Astro.url.pathname;
---

<header class="w-full h-[80px] bg-primRed text-white z-80 fixed top-0 left-0">
  <nav class="flex px-5 lg:px-10 items-center h-full justify-between">
    <div>
      <a
        href="/astro-site"
        class="text-base md:text-3xl flex flex-col md:flex-row md:gap-2"
      >
        <span><span class="font-bold text-md md:text-4xl">R</span>ejoice</span>
        <span><span class="font-bold text-md md:text-4xl">E</span>state</span>
        <span><span class="font-bold text-md md:text-4xl">C</span>onsultants</span>
      </a>
      <p class="font-light tracking-wider hidden md:block">
        Property Simplified
      </p>
    </div>
    <div
      id=""
      class="navLinks h-screen lg:h-auto lg:static absolute bg-primRed lg:bg-transparent lg:min-h-fit min-h-[20vh] left-full top-[85px] w-full lg:w-auto flex lg:items-center px-5 py-10 lg:p-0 transition-all duration-500 ease-in-out z-40 "
    >
      <ul
        class="flex flex-col lg:flex-row items-center justify-center lg:justify-center gap-10 lg:gap-[4vw] text-xl lg:text-lg w-full text-center"
      >
        <li
          class={`hover:scale-105 w-full lg:w-auto ${
            currentPath === "/astro-site/" ? "font-bold scale-105 lg:border-b-4 lg:border-b-white lg:rounded-sm" : ""
          }`}
        >
          <a href="/astro-site">Home</a>
        </li>
        <li
          class={`hover:scale-105 w-full lg:w-auto ${
            currentPath === "/astro-site/about" ? "font-bold scale-105 lg:border-b-4 lg:border-b-white lg:rounded-sm " : ""
          }`}
        >
          <a href="/astro-site/about">About</a>
        </li>
        <li
          class={`hover:scale-105 w-full lg:w-auto ${
            currentPath === "/astro-site/projects" ? "font-bold scale-105 lg:border-b-4 lg:border-b-white lg:rounded-sm" : ""
          }`}
        >
          <a href="/astro-site/projects">Projects</a>
        </li>
        <li
          class={`hover:scale-105 w-full lg:w-auto ${
            currentPath === "/astro-site/team" ? "font-bold scale-105 lg:border-b-4 lg:border-b-white lg:rounded-sm" : ""
          }`}
        >
          <a href="/astro-site/team">Team</a>
        </li>
        <li
          class={`hover:scale-105 w-full lg:w-auto ${
            currentPath === "/astro-site/tech" ? "font-bold scale-105 lg:border-b-4 lg:border-b-white lg:rounded-sm" : ""
          }`}
        >
          <a href="/astro-site/tech">Tech</a>
        </li>
        <li
          class={`hover:scale-105 w-full lg:w-auto ${
            currentPath === "/astro-site/inquiry" ? "font-bold scale-105 lg:border-b-4 lg:border-b-white lg:rounded-sm" : ""
          }`}
        >
          <a href="/astro-site/inquiry">Inquiry</a>
        </li>
        <li
          class={`hover:scale-105 w-full lg:w-auto ${
            currentPath === "/astro-site/career" ? "font-bold scale-105 lg:border-b-4 lg:border-b-white lg:rounded-sm" : ""
          }`}
        >
          <a href="/astro-site/career">Career</a>
        </li>
      </ul>
    </div>
    <div class="lg:hidden text-2xl cursor-pointer z-50">
      <ion-icon onclick="handleToggle(this)" name="menu"></ion-icon>
    </div>
  </nav>
</header>

<script is:inline>
  function handleToggle(e) {
    e.name = e.name === "menu" ? "close" : "menu";
    const navLinks = document.querySelector(".navLinks");
    navLinks.classList.toggle("left-0");
    navLinks.classList.toggle("left-full");
  }
</script>
